    "version": "0.2.0",
    "configurations": [
        {
            "name": "Custom Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Default Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "-d",
                "-n",
                "-o", "changelog_file.txt",
                "../2025-11.yml",
            ],
        },
    ]
}